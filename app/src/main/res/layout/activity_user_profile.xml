<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".UserProfile" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="30dp" android:layout_width="129dp" app:layout_constraintVertical_bias="0.19" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.157" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold" android:textColorHint="#423D3D" android:textColor="#0C0C0C" android:hint="Your Name" android:id="@+id/changeName"/>

    <EditText android:layout_height="22dp" android:layout_width="222dp" app:layout_constraintVertical_bias="0.22" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.759" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/editName"/>

    <TextView android:layout_height="30dp" android:layout_width="129dp" app:layout_constraintVertical_bias="0.381" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.4" android:textStyle="bold" android:textColorHint="#423D3D" android:hint="Phone Number" android:id="@+id/changePhoneNumber" app:layout_constraintTop_toBottomOf="@+id/changeAddress" app:layout_constraintEnd_toStartOf="@+id/editAddress" app:layout_constraintBottom_toTopOf="@+id/buttonSave"/>

    <EditText android:layout_height="22dp"
        android:layout_width="222dp"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/editPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/editName"/>

    <TextView android:layout_height="30dp" android:layout_width="129dp" app:layout_constraintVertical_bias="0.358" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.401" app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold" android:textColorHint="#423D3D" android:hint="Email" android:id="@+id/changeEmail" app:layout_constraintEnd_toStartOf="@+id/editPhoneNumber"/>

    <EditText android:layout_height="22dp" android:layout_width="222dp" app:layout_constraintVertical_bias="0.169" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.759" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/editEmail" app:layout_constraintTop_toBottomOf="@+id/editPhoneNumber"/>

    <TextView android:layout_height="30dp" android:layout_width="129dp" app:layout_constraintVertical_bias="0.157" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.152" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold" android:textColorHint="#423D3D" android:hint="Address" android:id="@+id/changeAddress" app:layout_constraintTop_toBottomOf="@+id/changeEmail"/>

    <EditText android:layout_height="22dp" android:layout_width="222dp" app:layout_constraintVertical_bias="0.274" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/editAddress" app:layout_constraintTop_toBottomOf="@+id/editEmail" android:layout_marginEnd="108dp"/>

    <Button android:layout_height="55dp" android:layout_width="148dp" app:layout_constraintVertical_bias="0.873" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.308" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/buttonSave" android:onClick="saveProfile" android:text="Save" android:background="#9BCC82"/>

    <Button android:layout_height="51dp" android:layout_width="150dp" app:layout_constraintVertical_bias="0.869" app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.704" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/buttonCancel" android:text="Cancel" android:background="#F4B471" app:layout_constraintStart_toEndOf="@+id/buttonSave"/>

</androidx.constraintlayout.widget.ConstraintLayout>