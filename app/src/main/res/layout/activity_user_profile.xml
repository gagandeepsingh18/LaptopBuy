<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="187dp"
        android:layout_height="166dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="530dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="124dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="820dp"
        android:hint="Harwinder singh Hayer"
        android:textAlignment="center"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.56" />

    <Button
        android:id="@+id/buttonEditProfile"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="700dp"
        android:layout_marginEnd="38dp"
        android:text="Edit Profile"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455" />

    <ImageView
        android:id="@+id/imageViewchane"
        android:layout_width="67dp"
        android:layout_height="56dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="500dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEditProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toEndOf="@+id/include"

        app:srcCompat="@drawable/ic_menu_camera"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="640dp"
        android:layout_marginEnd="500dp"
        android:layout_marginBottom="52dp"
        android:hint="Email"
        android:textAlignment="center"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.682"
        app:layout_constraintStart_toEndOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:layout_constraintVertical_bias="0.525" />

    <TextView
        android:id="@+id/textViewEmailAns"
        android:layout_width="174dp"
        android:layout_height="26dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="600dp"
        android:textSize="20dp"
        android:layout_marginBottom="71dp"
        android:hint="example@example.com"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toEndOf="@+id/textViewEmail"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditProfile"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:hint="phone:"
        android:textAlignment="center"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

    <TextView
        android:id="@+id/textViewPhoneAns"
        android:layout_width="189dp"
        android:layout_height="26dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="64dp"
        android:hint="54555555"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textViewPhone"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailAns" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="128dp"
        android:layout_height="52dp"
        android:hint="Address"
        android:textAlignment="center"
        android:textColorHint="@color/cardview_dark_background"


        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhone"
        app:layout_constraintVertical_bias="0.34" />

    <TextView
        android:id="@+id/textViewAddressAns"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="somewhere in some country of the world"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddress"
        app:layout_constraintVertical_bias="0.304"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>