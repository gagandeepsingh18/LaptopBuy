<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gagan.ProductsDetailsActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ProductDetailsImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="0dp" />

        <TextView
            android:id="@+id/ProductDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ProductDetailsImage"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="43dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ProductDetailsPriceText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="333dp"
            android:text="Price:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsPrice"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/ProductDetailsTitle"
            android:layout_marginStart="50dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/ProductDetailsPriceText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/ProductDetailsPrice"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="10dp"
            android:scrollbars="vertical"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/ProductDetailsManufacturerText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/ProductDetailsDescription"
            android:text="Manufacturer:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsManufacturer"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/ProductDetailsDescription"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ProductDetailsManufacturerText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsMemoryText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/ProductDetailsManufacturer"
            android:text="Memory:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsMemory"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/ProductDetailsManufacturer"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ProductDetailsMemoryText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsStorageText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/ProductDetailsMemory"
            android:text="Storage:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsStorage"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/ProductDetailsMemory"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ProductDetailsStorageText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsCPUText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/ProductDetailsStorage"
            android:text="CPU Model:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsCPU"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/ProductDetailsStorage"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ProductDetailsCPUText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsGPUText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/ProductDetailsCPU"
            android:text="GPU Model:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ProductDetailsGPU"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/ProductDetailsCPU"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ProductDetailsGPUText"
            android:textSize="20sp" />



        <Button
            android:id="@+id/CartButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ProductDetailsGPU"
            android:layout_alignParentStart="true"
            android:layout_marginStart="121dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="104dp"
            android:background="@drawable/buttonshape"
            android:backgroundTint="#64b5f6"
            android:text="Add to Cart"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>