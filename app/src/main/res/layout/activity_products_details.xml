<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gagan.ProductsDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/PProductImage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"

            />

        <TextView
            android:id="@+id/PProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="159dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/PProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="156dp"
            android:layout_marginTop="54dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/PProductDescription"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="153dp"
            android:layout_marginTop="101dp"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/AddtoCartButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/PProductDescription"
            android:layout_alignParentStart="true"
            android:layout_marginStart="121dp"
            android:layout_marginTop="111dp"
            android:layout_marginEnd="104dp"
            android:background="@drawable/buttonshape"
            android:backgroundTint="#64b5f6"
            android:text="Add to Cart"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>